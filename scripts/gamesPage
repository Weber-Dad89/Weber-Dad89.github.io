let xTurn = true;

function changeMark(buttonID) {
    let currentMark = document.getElementById(buttonID).innerHTML;

    if ( !currentMark) {
        if (xTurn) {
            document.getElementById(buttonID).innerHTML = 'X';
            // TODO: Set X Color
            document.getElementById(currentMark).style = 'text-color: green;';
    }
    else {
        document.getElementById(buttonID).innerHTML = 'O';
        // TODO Set O color
        document.getElementById(currentMark).style= 'text-color: blue;';
    }

    xTurn = !xTurn;
    checkWin();
    }
}

function clearFlips() {
    document.getElementById('playerFlip').innerHTML = "";
    document.getElementById('randomFlip').innerHTML = "";
    document.getElementById('message').textContent = "";
}

